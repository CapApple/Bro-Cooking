        <h3>See what's hot right now:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <p>
              <span class="label">Name:</span>
              <span class="name">{{this.name}}</span>
              <span class="label">Time Required:</span>
              <span class="time">{{this.minutes}}</span>
              <span class="label">Ingredients:</span>
              <span class="ingredients">{{this.ingredients}}</span>
              <span class="label">Favorited by:</span>
              <span class="fav">{{this.favorites}}</span>          
            </p>
            {{!-- <a href="example/{{this.id}}">{{this.text}}</a> --}}
            {{!-- <button class="btn btn-danger float-right delete">ｘ</button> --}}
            {{!-- “Let's cook" Button --}}
            <a href="recipe/{{this.id}}"><button class="detail">Let's cook!</button></a>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>




