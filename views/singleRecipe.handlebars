<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Let's cook!</h5>
          <p>
            <strong>Name</strong>: {{example.name}}
          </p>
          <p>
            <span>Liked by: </span> <span>{{example.favorites}}</span>
          </p>
          <p>
            <span>time needed:</span> <span>{{example.minutes}}minutes</span>
          <p>
            <strong>Ingredients</strong>: {{example.ingredients}}
          </p>
          <p>
            <strong>Process:</strong> {{example.process}}
          </p>
          {{!-- like button --}}
          <div>
            <span>Like this one?</span><button data-recipeid="{{example.id}}" class="like"><i class="far fa-star"></i></button>
          </div>
          <br>
          <a href="/favorites">‚Üê Back To the List</a>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/singleRecipe.js"></script>